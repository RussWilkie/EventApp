<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gallery_imageView"
        android:layout_width="296dp"
        android:layout_height="256dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="44dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/flag_image_id_button" />

    <Button
        android:id="@+id/left_arrow_id_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="50dp"
        android:text="previous"
        app:layout_constraintRight_toLeftOf="@+id/like_id_button"
        app:layout_constraintTop_toBottomOf="@+id/gallery_imageView" />

    <Button
        android:id="@+id/right_arrow_id_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="Next"
        app:layout_constraintLeft_toRightOf="@+id/like_id_button"
        app:layout_constraintTop_toBottomOf="@+id/gallery_imageView" />

    <Button
        android:id="@+id/like_id_button"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="like"
        tools:layout_editor_absoluteX="162dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/gallery_imageView" />

    <Button
        android:id="@+id/flag_image_id_button"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="flag"
        tools:layout_editor_absoluteX="162dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />
</android.support.constraint.ConstraintLayout>