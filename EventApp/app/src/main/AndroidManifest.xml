<!--TODO clean up activities that are not needed ?-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity"/>
        <activity android:name=".LoginTwoActivity" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </activity>
        <activity android:name=".RegisterUserActivity" />
        <activity android:name=".Camera" />
        <activity android:name=".AdminMemberOperations" />
        <activity android:name=".EventDetailsNavigationDrawer" />
